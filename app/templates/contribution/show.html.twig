{% extends 'base.html.twig' %}

{% block title %}Read: {{ contribution.title }}{% endblock %}

{% block body %}
    <!-- Contribution content column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">{{ contribution.title }}</h1>

        <!-- Author -->
        <p class="lead">
            by
            <a href="#">{{ contribution.user.username }}</a>
            - {{ include('contribution/_delete_form.html.twig') }}
        </p>


        <hr>

        <!-- Date/Time -->
        <p>Posted on {{ contribution.createdAt|date('F j, Y, g:i a') }}</p>

        <hr>

        <!-- Post Content -->
        <pre class="col-sm-12">
            {{ contribution.description|raw }}
        </pre>

        <hr>

