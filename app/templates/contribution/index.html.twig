{% extends 'base.html.twig' %}

{% block body %}
<div class="container text-center">
    <div class="row">
        <div class="col-6">
            <h1>What we have today!</h1>
        </div>
        {% if app.user is empty %}
            <div class="col-6">
                <a class="btn btn-primary btn-lg" href="{{ path('connect_github_start') }}">
                    <i class="fa fa-sign-in-alt"></i> Log-in
                </a>
            </div>
        {% else %}
            <div class="col-6">
                <a class="btn btn-primary btn-lg" href="{{ path('add_contribution') }}">
                    <i class="fa fa-plus"></i> Contribute
                </a>
            </div>
        {% endif %}
    </div>

    <div class="row">
        {% if contributions is not empty %}
            {% for contribution in contributions %}
                <div class="col-md-12">
                    <h1>{{ contribution.title }}</h1>
                    <p>{{ contribution.description }}</p>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-md-12">
                <h5>Nothing there yet!</h5>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
